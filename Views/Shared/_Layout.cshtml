<!DOCTYPE html>
@using NhomProject.Models
@{
    // Get cart from session
    var cart = Session["Cart"] as Cart;
    int totalQuantity = 0;
    if (cart != null && cart.Items != null)
    {
        // Sum the quantity of all items
        totalQuantity = cart.Items.Sum(item => item.Quantity);
    }
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Electronics Store</title>


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header>
        <div class="header-top-bar">
            <div class="container">
                <a href="#" class="location-link"> <i class="fas fa-map-marker-alt"> </i>Thành Phố Hồ Chí Minh</a>
                <div class="user-links">


                    @if (Session["UserId"] == null)
                    {

                        <a href="@Url.Action("Login", "Auth")">Đăng nhập / Đăng ký</a>
                    }
                    else
                    {

                        <a href="@Url.Action("Profile", "Auth")">Xin chào!, @Session["FullName"]</a>
                        <a href="@Url.Action("OrderHistory", "Home")">Lịch sử mua hàng</a>
                        <a href="@Url.Action("Logout", "Auth")">Đăng xuất</a>
                    }

                <a href="@Url.Action("Cart", "Home")" class="cart-link" style="position: relative;">
                    <i class="fa fa-shopping-cart"></i> Giỏ Hàng

                    @if (totalQuantity > 0)
                    {
                        <span class="cart-badge">@totalQuantity</span>
                    }
                </a>
                </div>
            </div>
        </div>

        <div class="header-main">
            <div class="container">

                <a href="@Url.Action("Index", "Home")" class="logo">Cửa Hàng Điện Tử</a>


                @using (Html.BeginForm("Search", "Home", FormMethod.Get, new { @class = "search-bar" }))
                {
                    <input type="text" name="term" placeholder="Tìm Sản Phẩm...." />
                    <button type="submit"><i class="fa fa-search"></i></button>
                }

                <div class="hamburger-menu"><i class="fa fa-bars"></i></div>
            </div>
        </div>

        <nav class="header-nav-bar">
            <div class="container">
                <a href="@Url.Action("Index", "Home")">Home</a>
                <a href="@Url.Action("Category", "Home", new { id = "Laptops" })">Laptops</a>
                <a href="@Url.Action("Category", "Home", new { id = "Điện Thoại" })">Điện Thoại</a>
                <a href="@Url.Action("Category", "Home", new { id = "Phụ Kiện" })">Phụ Kiện</a>
                <a href="@Url.Action("Category", "Home", new { id = "Đồng Hồ" })">Đồng Hồ</a>
                <a href="@Url.Action("Category", "Home", new { id = "Đồng Hồ Thông Minh" })">Đồng Hồ Thông Minh</a>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year Cửa hàng điện tử. Mọi quyền được bảo lưu.</p>
            <p>
                Chuyên cung cấp điện thoại, laptop, phụ kiện chính hãng với giá ưu đãi.
                Cập nhật liên tục các chương trình khuyến mãi hot mỗi ngày!
            </p>
            <p>
                Các thành viên trong nhóm:
                1: Châu Minh Phú-24DH111420
                2: Phan Võ Minh Tâm-24DH111646
                3: Nguyễn Tiến Đạt-23DH110744
            </p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/Site.js"></script>
</body>
</html>

