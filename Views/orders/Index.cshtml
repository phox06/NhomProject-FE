@model IEnumerable<NhomProject.Models.Order>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Lịch sử đơn hàng";
}

<div class="center-page">
    <h2>📜 Lịch sử đơn hàng</h2>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">Bạn chưa có đơn hàng nào.</p>
    }
    else
    {
        <table class="table table-bordered table-hover mt-3">
            <thead class="table-light">
                <tr>
                    <th>Mã đơn</th>
                    <th>Khách hàng</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.CustomerName</td>
                        <td>@order.Date.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@String.Format("{0:N0}₫", order.Total)</td>
                        <td>@order.Status</td>
                        <td>
                            <a href="/Orders/Detail/@order.Id" class="btn btn-primary btn-sm">
                                Xem chi tiết
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

