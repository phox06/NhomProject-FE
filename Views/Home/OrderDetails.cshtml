
@{
    ViewBag.Title = "OrderDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* This view is from your friend's 'Detail.cshtml' file,
    renamed and integrated to match your HomeController. *@
@model NhomProject.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container">
    <div class="card my-4">
        <div class="card-header">
            <h3>📦 Chi tiết đơn hàng #@Model.Id</h3>
        </div>
        <div class="card-body p-4">
            <div class="row mb-3">
                <div class="col-md-6">
                    <p><strong>Khách hàng:</strong> @Model.CustomerName</p>
                    <p><strong>Địa chỉ:</strong> @Model.Address</p>
                    <p><strong>Số điện thoại:</strong> @Model.Phone</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Phương thức thanh toán:</strong> @Model.PaymentMethod</p>
                    <p><strong>Ngày đặt:</strong> @Model.Date.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Trạng thái:</strong> <span class="badge bg-warning text-dark">@Model.Status</span></p>
                </div>
            </div>

            <h4>Danh sách sản phẩm:</h4>
            <table class="table table-bordered mt-3">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.Total.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>

            <h4 class="text-end">
                <strong>Tổng cộng:</strong> @Model.Total.ToString("C")
            </h4>

            <div class="text-start mt-4">
                <a href="@Url.Action("OrderHistory", "Home")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại lịch sử
                </a>
            </div>
        </div>
    </div>
</div>


