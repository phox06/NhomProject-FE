@model NhomProject.Models.Cart
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Site.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container">
    <h2 class="section-title">Your Shopping Cart</h2>

    @if (Model.Items.Any())
    {
        <table class="cart-table">
            <thead>
                <tr>
                    <th colspan="2">Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td class="cart-item-image">
                            <img src="@Url.Content(item.ImageUrl)" alt="@item.ProductName" />
                        </td>
                        <td class="cart-item-name">
                            @item.ProductName
                        </td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>@item.Total.ToString("C")</td>
                        <td class="cart-item-remove">
                            <a href="@Url.Action("RemoveFromCart", "Home", new { id = item.ProductId })"
                               title="Remove item">
                                &times;
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="cart-summary">
            <div class="cart-total">
                <strong>Total: @Model.GetTotal().ToString("C")</strong>
            </div>
            <div class="cart-actions">
                <a href="@Url.Action("Checkout", "Home")" class="btn checkout-btn">
                    Proceed to Checkout
                </a>
            </div>
        </div>
    }
    else
    {
        <p>Your cart is empty.</p>
        <a href="@Url.Action("Index", "Home")" class="btn">Continue Shopping</a>
    }

</div>

