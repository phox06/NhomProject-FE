@model NhomProject.Models.Cart
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Site.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container">
    <h2 class="section-title">Giỏ Hàng Của Bạn</h2>

    @if (Model.Items.Any())
    {
        <table class="cart-table">
            <thead>
                <tr>
                    <th colspan="2">Sản Phẩm</th>
                    <th>Giá: </th>
                    <th>Số Lượng: </th>
                    <th>Tổng Cộng: </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td class="cart-item-image">
                            <img src="@Url.Content(item.ImageUrl)" alt="@item.ProductName" />
                        </td>
                        <td class="cart-item-name">
                            @item.ProductName
                        </td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>@item.Total.ToString("C")</td>
                        <td class="cart-item-remove">
                            <a href="@Url.Action("RemoveFromCart", "Home", new { id = item.ProductId })"
                               title="Remove item">
                                &times;
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="cart-summary">
            <div class="cart-total">
                <strong>Tổng Cộng:  @Model.GetTotal().ToString("C")</strong>
            </div>
            <div class="cart-actions">
                <a href="@Url.Action("Checkout", "Home")" class="btn checkout-btn">
                    Tiến Hành Thanh Toán
                </a>
            </div>
        </div>
    }
    else
    {
        <p>Giỏ Hàng Đang Trống.</p>
        <a href="@Url.Action("Index", "Home")" class="btn">Tiếp Tục Mua Sắm</a>
    }

</div>

