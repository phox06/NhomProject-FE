@model NhomProject.Models.Product

@{
    
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <div class="product-details-container">

        <div class="product-image-gallery">
            <img src="@Url.Content(Model.MainImageUrl)" alt="@Model.Name" />
        </div>

        <div class="product-info">

            <h1 class="product-info-title">@Model.Name</h1>

            <div class="product-info-rating">
                @Model.Rating Stars (@Model.ReviewCount reviews)
            </div>

            <div class="product-info-price">
                @Model.Price.ToString("C")

                
                @if (Model.OldPrice.HasValue && Model.OldPrice.Value > Model.Price)
                {
                    <span class="product-info-price-old">
                        @Model.OldPrice.Value.ToString("C")
                    </span>
                }
            </div>

            <div class="product-info-description">
                @Html.Raw(Model.Description)
            </div>

            @using (Html.BeginForm("AddToCart", "Home", new { id = Model.ProductId }))
            {
                <div class="product-info-actions">
                    <label for="quantity">Số Lượng: </label>

                   
                    <input type="number" id="quantity" name="quantity" value="1" min="1" class="quantity-input" />

                    <button type="submit" class="btn add-to-cart-btn btn-primary">
                        Thêm vào Giỏ Hàng
                    </button>
                </div>
            }

        </div>
    </div>
</div>