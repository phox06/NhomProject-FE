@model PagedList.IPagedList<NhomProject.Models.User>
@using PagedList.Mvc;


@{
    ViewBag.Title = "Quản lý Khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success text-white p-2">@ViewBag.Title</h2>

@using (Html.BeginForm("Index", "Customers", FormMethod.Get, new { @class = "row g-3 mb-3" }))
{
    <div class="col-md-8">
        @Html.TextBox("searchTerm", (string)ViewBag.SearchTerm, new { @class = "form-control", placeholder = "Nhập tên, email hoặc tên đăng nhập..." })
    </div>
    <div class="col-md-4">
        <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
    </div>
}

<table class="table table-bordered table-info">
    <tr class="bg-success text-white">
        <th>
            Họ và tên
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Email
        </th>
        <th>
            Tên đăng nhập
        </th>
        <th style="width: 200px;"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @* Hiển thị Username từ bảng User liên quan *@
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.ActionLink("Xem Đơn", "Details", new { id = item.UserId }, new { @class = "btn btn-info btn-sm" })
                @Html.ActionLink("Sửa", "Edit", new { id = item.UserId }, new { @class = "btn btn-primary btn-sm" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.UserId }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }

</table>

<div class="pagination-container d-flex justify-content-center">
    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, searchTerm = ViewBag.SearchTerm }),
        new PagedListRenderOptions
        {
            LiElementClasses = new List<string> { "page-item" },
            UlElementClasses = new List<string> { "pagination" }
        })
</div>
