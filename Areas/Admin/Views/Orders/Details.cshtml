@model NhomProject.Models.Order

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-primary text-white p-2">QUẢN LÝ ĐƠN HÀNG</h2>

<div class="container mt-4">
    @Html.Partial("~/Views/Shared/_PVOrderItems.cshtml", Model)

    <div class="text-center mt-4">
        <a href="@Url.Action("UpdateStatus", "Orders", new { id = Model.Id })" class="btn btn-primary">
            <i class="fas fa-edit"></i> Cập nhật trạng thái
        </a>

        <a href="@Url.Action("Index", "Orders")" class="btn btn-secondary">
            Quay lại danh sách
        </a>
    </div>
</div>