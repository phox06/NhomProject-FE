@model PagedList.IPagedList<NhomProject.Models.Order>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Quản lý Đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success text-white p-2">@ViewBag.Title</h2>

@using (Html.BeginForm("Index", "Orders", FormMethod.Get, new { @class = "row g-3 mb-3" }))
{
    <div class="col-md-8">
        @Html.TextBox("searchTerm", (string)ViewBag.SearchTerm, new { @class = "form-control", placeholder = "Nhập tên khách hàng hoặc trạng thái..." })
    </div>
    <div class="col-md-4">
        <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
    </div>
}

<table class="table table-bordered table-info">
    <tr class="bg-success text-white">
        <th>Mã Đơn</th>
        <th>Tên Khách hàng</th>
        <th>Ngày Đặt</th>
        <th>Tổng Tiền</th>
        <th>Trạng thái Thanh toán</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @string.Format("{0:N0}", item.Total) ₫
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
            </td>
        </tr>
    }

</table>

<div class="pagination-container d-flex justify-content-center">
    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, searchTerm = ViewBag.SearchTerm }),
        new PagedListRenderOptions
        {
            LiElementClasses = new List<string> { "page-item" },
            UlElementClasses = new List<string> { "pagination" }
        })
</div>