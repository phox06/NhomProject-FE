<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quản Trị Hệ Thống</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f6f9; /* Soft gray background */
            overflow-x: hidden;
        }

        /* WRAPPER: Holds Sidebar and Content */
        .wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
        }

        /* --- SIDEBAR STYLING --- */
        #sidebar {
            min-width: 260px;
            max-width: 260px;
            background: #2c3e50; /* Modern Dark Blue/Gray */
            color: #fff;
            transition: all 0.3s;
            min-height: 100vh;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }

        #sidebar .sidebar-header {
            padding: 20px;
            background: #1a252f;
            border-bottom: 1px solid #4b545c;
        }

        #sidebar .sidebar-header h3 {
            font-size: 1.2rem;
            font-weight: 600;
            margin: 0;
            color: #fff;
        }

        #sidebar ul.components {
            padding: 20px 0;
        }

        #sidebar ul li {
            padding: 5px 10px;
        }

        #sidebar ul li a {
            padding: 12px 15px;
            font-size: 0.95rem;
            display: block;
            color: #a8b2b9;
            border-radius: 8px;
            text-decoration: none;
            transition: 0.3s;
        }

        #sidebar ul li a:hover {
            color: #fff;
            background: #34495e;
            transform: translateX(5px); /* Slide effect */
        }

        #sidebar ul li.active > a {
            color: #fff;
            background: #3498db; /* Active Blue */
            box-shadow: 0 4px 6px rgba(52, 152, 219, 0.3);
        }

        #sidebar ul li a i {
            margin-right: 15px;
            width: 20px;
            text-align: center;
        }

        /* --- CONTENT STYLING --- */
        #content {
            width: 100%;
            min-height: 100vh;
            transition: all 0.3s;
            display: flex;
            flex-direction: column;
        }

        /* TOP NAVBAR */
        .top-navbar {
            background: #fff;
            padding: 10px 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .user-info span {
            font-weight: 500;
            color: #555;
        }

        /* MAIN BODY CONTENT */
        .main-body {
            padding: 30px;
            flex: 1;
        }

        /* Make the white containers look like "Cards" */
        .card-box {
            background: #fff;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.05);
            margin-bottom: 20px;
        }

        /* Footer */
        .footer {
            background: #fff;
            padding: 15px;
            text-align: center;
            font-size: 0.85rem;
            color: #777;
            border-top: 1px solid #eee;
        }

        /* Responsive tweaks */
        @@media (max-width: 768px) {
            #sidebar {
                margin-left: -260px;
            }
            #sidebar.active {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>

    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3><i class="fas fa-store"></i> My Store Admin</h3>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a href="@Url.Action("Index", "Home", new { area = "Admin" })">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Index", "Products", new { area = "Admin" })">
                        <i class="fas fa-box-open"></i> Sản Phẩm
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Index", "Categories", new { area = "Admin" })">
                        <i class="fas fa-list"></i> Danh Mục
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Index", "Orders", new { area = "Admin" })">
                        <i class="fas fa-shopping-cart"></i> Đơn Hàng
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Index", "Customer", new { area = "Admin" })">
                        <i class="fas fa-users"></i> Khách Hàng
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Index", "Account", new { area = "Admin" })">
                        <i class="fas fa-user-shield"></i> Tài khoản Admin
                    </a>
                </li>
            </ul>
        </nav>

        <div id="content">

            <nav class="top-navbar">
                <button type="button" id="sidebarCollapse" class="btn btn-light text-secondary">
                    <i class="fas fa-bars"></i>
                </button>

                <div class="user-info">
                    <span>Xin chào, Admin</span>
                    <a href="@Url.Action("Logout", "Home", new { area = "Admin" })" class="btn btn-sm btn-outline-danger ml-2">
                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                    </a>
                </div>
            </nav>

            <div class="main-body">
                <div class="card-box">
                    @RenderBody()
                </div>
            </div>

            <div class="footer">
                <p>&copy; @DateTime.Now.Year Cửa hàng điện tử. Designed for Modern Web.</p>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            // Toggle Sidebar
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });

            // Highlight active link based on URL
            var path = window.location.pathname;
            $('#sidebar ul li a').each(function () {
                var href = $(this).attr('href');
                if (path.indexOf(href) !== -1 && href !== '/') {
                    $(this).parent().addClass('active');
                }
            });
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>