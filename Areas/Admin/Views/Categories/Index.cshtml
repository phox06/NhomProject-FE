@model IEnumerable<NhomProject.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success">DANH SÁCH SẢN PHẨM</h2>

<table class="table bg-info col-lg-12 col-md-6 col-sm-3">
    <tr>
        <th class="bg-success col-lg-4 col-md-2 col-sm-1">
           
            TÊN DANH MỤC
        </th>
        <th class="bg-success col-lg-4 col-md-2 col-sm-1">
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th class="bg-success col-lg-4 col-md-2 col-sm-1"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Cập nhật", "Edit", new { id = item.CategoryId }, new { @class = "btn btn-primary btn-sm" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryId }, new { @class = "btn btn-primary btn-sm" })
            </td>
        </tr>
    }



</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary btn-sm" })
</p>