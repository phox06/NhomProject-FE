    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success">CHỈNH SỬA DANH MỤC</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
