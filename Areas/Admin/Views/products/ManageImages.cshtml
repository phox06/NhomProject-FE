@model NhomProject.Models.Product

@{
    ViewBag.Title = "Quản lý ảnh: " + Model.Name;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">
            Quản lý thư viện ảnh cho: <span class="text-danger">@Model.Name</span>
        </h6>
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-sm btn-secondary" })
    </div>
    <div class="card-body">

        <div class="row mb-4 bg-light p-3 rounded">
            <div class="col-md-6 border-right">
                <h5 class="text-dark"><i class="fas fa-upload"></i> Cách 1: Upload từ máy</h5>
                @using (Html.BeginForm("UploadImages", "Products", new { id = Model.ProductId }, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-inline" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group mb-2">
                        <input type="file" name="files" multiple class="form-control-file" accept="image/*" required />
                    </div>
                    <button type="submit" class="btn btn-primary mb-2 ml-2">
                        <i class="fas fa-cloud-upload-alt"></i> Tải lên
                    </button>
                }
            </div>

            <div class="col-md-6">
                <h5 class="text-dark"><i class="fas fa-link"></i> Cách 2: Dán Link Online</h5>
                @using (Html.BeginForm("AddImageUrl", "Products", new { id = Model.ProductId }, FormMethod.Post, new { @class = "form-inline" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group mb-2 w-75">
                        <input type="text" name="imageUrl" class="form-control w-100" placeholder="https://example.com/anh-san-pham.jpg" required />
                    </div>
                    <button type="submit" class="btn btn-info mb-2 ml-2">
                        <i class="fas fa-plus-circle"></i> Thêm Link
                    </button>
                }
            </div>
        </div>

        <hr />

        <h5 class="mb-3">Danh sách ảnh hiện có (@(Model.ProductImages != null ? Model.ProductImages.Count : 0))</h5>
        <div class="row">
            @if (Model.ProductImages != null && Model.ProductImages.Count > 0)
            {
                foreach (var img in Model.ProductImages)
                {
                    <div class="col-md-3 col-sm-4 mb-4 text-center">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body d-flex align-items-center justify-content-center bg-white p-2">
                                <img src="@(img.ImageUrl.StartsWith("http") ? img.ImageUrl : Url.Content(img.ImageUrl))"
                                     style="max-width: 100%; max-height: 150px; object-fit: contain;"
                                     class="img-fluid rounded" />
                            </div>
                            <div class="card-footer bg-light border-top-0 p-2">
                                @using (Html.BeginForm("DeleteImage", "Products", new { id = img.ImageId }, FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm w-100" onclick="return confirm('Bạn có chắc muốn xóa ảnh này?');">
                                        <i class="fas fa-trash"></i> Xóa ảnh
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center text-muted py-5">
                    <i class="fas fa-images fa-3x mb-3 text-gray-300"></i>
                    <p>Chưa có ảnh phụ nào trong thư viện.</p>
                </div>
            }
        </div>
    </div>
</div>