@model NhomProject.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success text-white p-2">CHI TIẾT SẢN PHẨM</h2>

<div class="container bg-white p-4 border">

    @Html.Partial("~/Views/Shared/_PVSharedProductDetail.cshtml", Model, new ViewDataDictionary { { "ShowBuyButtons", false } })

